<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote name="n4e"
	   fetch="https://github.com/nexus4ever" />

  <!-- Removed Kernel and device source -->
  <remove-project name="device/huawei/angler" />
  <remove-project name="device/huawei/angler-kernel" />
  <remove-project name="device/lge/bullhead-kernel" />
  <remove-project name="device/moto/shamu" />
  <remove-project name="device/moto/shamu-kernel" />
  <remove-project name="proprietary_vendor_huawei" />
  <remove-project name="proprietary_vendor_moto" />
  <remove-project name="android_device_lge_bullhead" />

  <!-- Removed AOSP hardware source -->
  <remove-project name="platform/hardware/qcom/audio" />
  <remove-project name="platform/hardware/qcom/display" />
  <remove-project name="platform/hardware/qcom/gps" />

  <!-- Removed Pure Repos -->
  <remove-project name="android_build" />

  <!-- Removed Pure Repos -->
  <remove-project name="platform/bionic" />
  <remove-project name="platform/system/sepolicy" />

  <!-- Mako's Hardware, Vendor and Device Repos -->
  <project path="vendor/lge/mako" name="vendor_lge_mako" remote="n4e" revision="n-7.0" />
  <project path="device/lge/mako" name="android_device_lge_mako" groups="device,mako" remote="n4e" revision="n-7.0" />
  <project path="hardware/qcom/audio" name="android_hardware_qcom_audio" remote="n4e" revision="n-7.0" />
  <project path="hardware/qcom/display" name="android_hardware_qcom_display" remote="n4e" revision="n-7.0" />
  <project path="hardware/qcom/gps" name="android_hardware_qcom_gps" remote="n4e" revision="n-7.0" />

  <!-- NeXus4ever specific Repos -->
  <project path="build" name="android_build" groups="pdk" remote="n4e" revision="n-7.0" >
    <copyfile src="core/root.mk" dest="Makefile" />
  </project>
  <project path="bionic" name="android_bionic" remote="n4e" revision="n-7.0" />
  <project path="system/sepolicy" name="android_system_sepolicy" remote="n4e" revision="n-7.0" />

  <!-- Revival Kernel Nougat Release -->
  <project path="kernel/lge/mako" name="android_kernel_lge_mako" remote="n4e" revision="nougat-stock" />

</manifest>

